<body>
    
    <!-- navbar -->
    <nav class="navbar">
        <h2 class="navbar-logo">
            <a href="#">JOBCAT</a>
        </h2>
        <div class="navbar-menu">
            <div>
                Hello!
                <div><%= user.name %></div>    
