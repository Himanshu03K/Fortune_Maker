        <div class="menu-toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>

    <!-- header -->
    <header>
            <h1 class="header-title">
                FIND YOUR <br> <span>PERFECT JOB</span> <br> EASILY
            </h1>
    </header>
    <!-- Search -->
    <div class="search-wrapper">
        <div class="search-box">
            <div class="search-card">
                <input type="text" class="search-input" placeholder="Job title or keywords">
                <button class="search-button" >Search</button> 
            </div>
        </div>
    </div>
    <!-- filter box -->
    <div class="filter-box">
        <div class="filter-dropdown">
            <select name="job-level" id="job-level" class="filter-select">
                <option >Job Level</option>
                <option >Entry</option>
                <option >Mid-Senior</option>
                <option >Director</option>
            </select>
            <select name="job-function" class="filter-select" id="job-function">
                <option >Job Function</option>
                <option >IT</option>
                <option >Management</option>
                <option >Education</option>
            </select>
            <select name="employment" id="employ" class="filter-select">
                <option value="">Employment Type</option>
                <Option>Internship</Option>
                <option>Part Time</option>
                <option >Full Time</option>
            </select>
            <select class="filter-select" name="location"  id="location">
                <option >Locations</option>
                <option >Remote</option>
                <option >US</option>
                <option >UK</option>
            </select>
            <select name="education" class="filter-select" id="education">
                <option >Education</option>
                <option >High School</option>
                <option >Backelor's Degree</option>
                <option >Master's Degree</option>
            </select>
        </div>
        <div class="filter-chosen">
            <div class="chosen-card">
                    Remote <i class="fa-solid fa-circle-xmark" > </i>
            </div>
            <div class="chosen-card">
                Full Time <i class="fa-solid fa-circle-xmark"></i>
            </div>
            <div class="chosen-card">
                Financial Tech <i class="fa-solid fa-circle-xmark"></i>
              
            </div>
            <div class="chosen-card">
                Entry Level <i class="fa-solid fa-circle-xmark"></i>
            </div>

        </div>
    </div>
   
    <!-- job listing -->
    <section class="job-list" id="jobs">
        <% job_list.reverse(); %> 
        <% for(let job of job_list) { %>
        <div class="job-card">
            <div class="job-name">
                <img src="userImages/<%= job.image %>" class="job-profile" alt="<%= job.image %>">
                <div class="job-detail">
                    <h4><%= job.name %></h4>
                    <h3><%= job.role %></h3>
              <p><%= job.description %></p>
                </div>
            </div>
            <div class="job-label">
                <a href="#" class="label-a"><%= job.skill1 %></a>
                <a href="#" class="label-b"><%= job.skill2 %></a>
            </div>
            <div class="job-posted">
                Posted 2 min ago
            </div>
        </div>
        <% } %> 
        <button class="job-more"> More List</button>
    </section>
<!-- Join -->
